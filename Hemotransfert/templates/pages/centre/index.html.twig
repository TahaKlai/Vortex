      <td>
       <a href="{{path('centre.delete',{id:centre.id})}}" class="btn.btn-warning">supprimer</a>
      </td>
    </tr>
   {% endfor %}
  </tbody>
</table>

<div class="navigation d-flex justify-content-center">
    {{ knp_pagination_render(centres) }}
</div>




 </div>
 
{% endblock %}
