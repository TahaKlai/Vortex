{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
     <h1 class="mt-4"> Modifier un centre </h1>

{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			<div class="form-error">
				{{ form_errors(form.nom) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.adresse) }}
			{{ form_widget(form.adresse) }}
			<div class="form-error">
				{{ form_errors(form.adresse) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.coordonnegeo) }}
			{{ form_widget(form.coordonnegeo) }}
			<div class="form-error">
				{{ form_errors(form.coordonnegeo) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.contact) }}
			{{ form_widget(form.contact) }}
			<div class="form-error">
				{{ form_errors(form.contact) }}
			</div>
		</div>


		

		{{ form_label(form.stock) }}
		<br>
		<div id="centres-wrapper">
			{% for field in form.stock %}
				<div style="min-width: 10%;">
					{{ form_widget(field) }}
					{{ form_label(field) }}
				</div>
			{% endfor %}
		</div>

		{{ form_end(form) }}






</div>

{% endblock %}
