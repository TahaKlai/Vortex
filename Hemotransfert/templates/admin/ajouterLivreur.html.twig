{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<!-- BEGIN CONTENT AREA -->
<div id="content" class="main-content">
    <div class="container">
        <div class="container ">
            <div class="row">
                <div id="flLoginForm" class="col-lg-12 layout-spacing">
                    <div class="statbox widget box box-shadow padding">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Ajouter Les Livreurs</h4>
                                </div>                                                                        
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                    
                            {{ form_start(form, {'attr':{'method':'post','novalidate':'novalidate'} }) }}
                            <div class="col-12">
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">CIN</label>
                                    {{ form_widget(form.cin, {'attr':{'class':'form-control' ,'placeholder':'Type'} }) }}
                                    {{ form_errors(form.cin, {'attr':{'class':'form-control' } }) }}
                                </div>
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">Nom</label>
                                    {{ form_widget(form.nom, {'attr':{'class':'form-control'} }) }}
                                    {{ form_errors(form.nom, {'attr':{'class':'form-control'} }) }}
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="inputEmail4" class="form-label">Prenom</label>
                                {{ form_widget(form.prenom, {'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.prenom, {'attr':{'class':'form-control'} }) }}
                            </div>
                            <div class="col-12">
                                <label for="inputEmail4" class="form-label">numero de telephone</label>                              
                                {{ form_widget(form.tel, {'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.tel, {'attr':{'class':'form-control'} }) }}
                            </div>
                            <div class="col-12">
                                <label for="inputEmail4" class="form-label">email</label>
                                {{ form_widget(form.email, {'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.email, {'attr':{'class':'form-control'} }) }}
                            </div>
                            <div class="col-12">
                                <label for="inputEmail4" class="form-label">Statut</label>
                                {{ form_widget(form.statutL, {'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.statutL, {'attr':{'class':'form-control'} }) }}
                            </div>
                            <div class="col-12">
                                <label for="inputEmail4" class="form-label">Zone de livraisons</label>
                                {{ form_widget(form.zoneLiv, {'attr':{'class':'form-select'} }) }}
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary">{{ button_label|default('ajouter') }}</button>
                            </div>
                        {{ form_end(form) }}
                        
                    
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                    
{% endblock %}
