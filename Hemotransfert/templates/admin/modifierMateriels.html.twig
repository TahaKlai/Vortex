{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<!-- BEGIN CONTENT AREA -->
<div id="content" class="main-content">
    <div class="container">
        <div class="container">
            <div class="row">
                <div id="flLoginForm" class="col-lg-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Ajouter Les Mat√©riels</h4>
                                </div>                                                                        
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            {{ form_start(form,{'attr':{'novalidate':'novalidate'} }) }}
                            <div class="col-12">
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">Type</label>
                                    {{ form_widget(form.typeM, {'attr':{'class':'form-control' ,'placeholder':'Type'} }) }}
                                    {{ form_errors(form.typeM, {'attr':{'class':'form-control' } }) }}
                                </div>
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">Description</label>
                                    {{ form_widget(form.descriptionM, {'attr':{'class':'form-control'} }) }}
                                    {{ form_errors(form.descriptionM, {'attr':{'class':'form-control'} }) }}
                                </div>
                            </div>
                                <div class="col-12">
                                    <label for="inputEmail4" class="form-label">Quantite</label>
                                    {{ form_widget(form.quantiteM, {'attr':{'class':'form-control'} }) }}
                                    {{ form_errors(form.quantiteM, {'attr':{'class':'form-control'} }) }}
                                </div>
                                <div class="col-12">
                                    <label for="inputEmail4" class="form-label">Date expiration</label>
                                    {{ form_widget(form.dateexpM, {'attr':{'class':'form-control'} }) }}
                                    {{ form_errors(form.dateexpM, {'attr':{'class':'form-control'} }) }}
                                </div>
                                <div class="col-12">
                                    <label for="inputEmail4" class="form-label">statut</label>
                                    {{ form_widget(form.statutM, {'attr':{'class':'form-control'} }) }}
                                    {{ form_errors(form.statutM, {'attr':{'class':'form-control'} }) }}
                                </div>
                                
                                <div class="col-12">
                                    <label for="inputEmail4" class="form-label">livreur</label>
                                    {{ form_widget(form.livreur, {'attr':{'class':'form-select'} }) }}
                                </div>
                                <div class="col-12">
                                  
                                    <button class="btn">{{ button_label|default('Modifier') }}</button>
                                    <a href="{{ path('app_admin_list') }}">Retour sur la liste</a>
                                </div>
                              
                               
                            {{ form_end(form) }}
                    
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                    
{% endblock %}
