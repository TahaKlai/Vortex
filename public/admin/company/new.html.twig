{# templates/company/new.html.twig #}

{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter une compagnie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Ajouter une compagnie</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form', 'id': 'company_form', 'novalidate': 'novalidate'}}) }}
                        
                        {# Display global form errors #}
                        {{ form_errors(form) }}
                        
                        <div class="form-group">
                            {{ form_label(form.Nom_c, 'Nom de la compagnie') }}
                            {{ form_widget(form.Nom_c, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la compagnie'}}) }}
                            <div class="text-danger">{{ form_errors(form.Nom_c) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.Adresse, 'Adresse') }}
                            {{ form_widget(form.Adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                            <div class="text-danger">{{ form_errors(form.Adresse) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.Num_tel, 'Numéro de téléphone') }}
                            {{ form_widget(form.Num_tel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                            <div class="text-danger">{{ form_errors(form.Num_tel) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.mail, 'Adresse e-mail') }}
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
                            <div class="text-danger">{{ form_errors(form.mail) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.Site_Web, 'Site Web') }}
                            {{ form_widget(form.Site_Web, {'attr': {'class': 'form-control', 'placeholder': 'Site Web'}}) }}
                            <div class="text-danger">{{ form_errors(form.Site_Web) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.Pays_c, 'Pays') }}
                            {{ form_widget(form.Pays_c, {'attr': {'class': 'form-control', 'placeholder': 'Pays'}}) }}
                            <div class="text-danger">{{ form_errors(form.Pays_c) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.Description_c, 'Description') }}
                            {{ form_widget(form.Description_c, {'attr': {'class': 'form-control', 'placeholder': 'Description', 'rows': 5}}) }}
                            <div class="text-danger">{{ form_errors(form.Description_c) }}</div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
