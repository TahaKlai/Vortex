{% extends 'base.html.twig' %}

{% block title %}Ajouter un Livreur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Ajouter un Livreur</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                        
                        {# Display global form errors #}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.cin, 'CIN') }}
                            {{ form_widget(form.cin, {'attr': {'class': 'form-control', 'placeholder': 'CIN'}}) }}
                            <div class="text-danger">{{ form_errors(form.cin) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom ') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom '}}) }}
                            <div class="text-danger">{{ form_errors(form.nom) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.prenom, 'Prenom ') }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                            <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.tel, 'Numéro de téléphone') }}
                            {{ form_widget(form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                            <div class="text-danger">{{ form_errors(form.tel) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.email, 'Adresse e-mail') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
                            <div class="text-danger">{{ form_errors(form.email) }}</div>
                        </div>

                       
                        
                        <div class="form-group">
                            {{ form_label(form.statutL, 'Statut') }}
                            {{ form_widget(form.statutL, {'attr': {'class': 'form-control', 'placeholder': 'Statut'}}) }}
                            <div class="text-danger">{{ form_errors(form.statutL) }}</div>
                        </div>
                        
                              

                        <div class="form-group">
                            {{ form_label(form.zoneLiv, 'Zone de livraisons') }}
                            {{ form_widget(form.zoneLiv, {'attr': {'class': 'form-control', 'placeholder': 'Zone de livraisons'}}) }}
                            <div class="text-danger">{{ form_errors(form.zoneLiv) }}</div>
                        </div>
                                                                       
                        

                        <div class="form-group text-center">
                            <button class="btn btn-primary">{{ button_label|default('ajouter') }}</button>
                        </div>
                        
                        {{ form_end(form) }}
                
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
