{# templates/admin/company_pdf.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Information</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        h1 {
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
        .logo {
            width: 100px; /* Adjust size as needed */
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <img src="{{ asset('admin/images/logo.png') }}" alt="Logo" class="logo">
    <h1>Company Information</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ company.getNomC }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.getAdresse }}</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>{{ company.getNumTel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ company.getMail }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ company.getSiteWeb }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ company.getPaysC }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.getDescriptionC }}</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
