{# templates/admin/volunteer/new.html.twig #}

{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter un volontaire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Ajouter un volontaire</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form', 'id': 'volunteer_form', 'novalidate': 'novalidate'}}) }}
                        
                        {# Display global form errors #}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.full_name, 'Nom complet') }}
                            {{ form_widget(form.full_name, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
                            <div class="text-danger">{{ form_errors(form.full_name) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.volunteer_address, 'Adresse') }}
                            {{ form_widget(form.volunteer_address, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                            <div class="text-danger">{{ form_errors(form.volunteer_address) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.phone_number, 'Numéro de téléphone') }}
                            {{ form_widget(form.phone_number, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                            <div class="text-danger">{{ form_errors(form.phone_number) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.email_address, 'Adresse e-mail') }}
                            {{ form_widget(form.email_address, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
                            <div class="text-danger">{{ form_errors(form.email_address) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.date_of_birth, 'Date de naissance') }}
                            {{ form_widget(form.date_of_birth, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
                            <div class="text-danger">{{ form_errors(form.date_of_birth) }}</div>
                            {# Optionally, add a description: 'Entrez votre date de naissance au format YYYY-MM-DD.' #}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.occupation, 'Profession') }}
                            {{ form_widget(form.occupation, {'attr': {'class': 'form-control', 'placeholder': 'Profession'}}) }}
                            <div class="text-danger">{{ form_errors(form.occupation) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.skills, 'Compétences') }}
                            {{ form_widget(form.skills, {'attr': {'class': 'form-control', 'placeholder': 'Compétences', 'rows': 5}}) }}
                            <div class="text-danger">{{ form_errors(form.skills) }}</div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.availability, 'Disponibilité') }}
                            {{ form_widget(form.availability, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.availability) }}</div>
                        </div>




                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
