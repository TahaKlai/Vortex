{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<h1>Contact</h1>

    <!-- BEGIN CONTENT AREA -->
<div id="content" class="main-content">
    <div class="container">
        <div class="container ">
            <div class="row">
                <div id="flLoginForm" class="col-lg-12 layout-spacing">
                    <div class="statbox widget box box-shadow padding">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>mail Livreurs</h4>
                                </div>                                                                        
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                    
                            {{ form_start(formulaire, {'attr':{'method':'post','novalidate':'novalidate'} }) }}
                            <div class="col-12">
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">email</label>
                                    {{ form_widget(formulaire.email, {'attr':{'class':'form-control' ,'placeholder':'email'} }) }}
                                </div>
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">objet</label>
                                    {{ form_widget(formulaire.objet, {'attr':{'class':'form-control'} }) }}
                                </div>
                                <div class="col-md-6">
                                    <label for="inputEmail4" class="form-label">content</label>
                                    {{ form_widget(formulaire.content, {'attr':{'class':'form-control'} }) }}
                                </div>
                            </div>
                           
                            <div class="col-12">
                                {{ form_widget(formulaire.envoyer) }}
                            </div>
                        {{ form_end(formulaire) }}
                        
                    
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
